<%- model_class = Gadget -%>
<div class="page-header">
  <h1><%=t '.title', :default => Gadget %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:make) %></dt>
      <dd><pre class="prettyprint"><%= @gadget.make %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:model) %></dt>
      <dd><pre class="prettyprint"><%= @gadget.model %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:available) %></dt>
      <dd><pre class="prettyprint"><%= @gadget.available %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:checked_out) %></dt>
      <dd><pre class="prettyprint"><%= @gadget.checked_out %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:checked_in) %></dt>
      <dd><pre class="prettyprint"><%= @gadget.checked_in %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:location) %></dt>
      <dd><pre class="prettyprint"><%= @gadget.location %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:orientation) %></dt>
      <dd><pre class="prettyprint"><%= @gadget.orientation %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:os_version) %></dt>
      <dd><pre class="prettyprint"><%= @gadget.os_version %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              gadgets_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_gadget_path(@gadget), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              gadget_path(@gadget),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

